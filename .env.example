# HealthSync Insurance Comparison Platform
# Copy this file to .env and fill in your values

# ── Database ─────────────────────────────────────────────────────────────
# PostgreSQL connection string
# For Render: use the Internal Database URL from your Render PostgreSQL dashboard
# For local: postgresql://username:password@localhost:5432/healthsync
DATABASE_URL=postgresql://username:password@hostname:5432/healthsync

# ── Server ───────────────────────────────────────────────────────────────
PORT=3000
NODE_ENV=development

# ── CORS ─────────────────────────────────────────────────────────────────
# Comma-separated list of allowed frontend origins
# For development: http://localhost:5173
# For production: https://your-frontend-domain.com
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# ── Frontend (Vite env vars) ─────────────────────────────────────────────
# API base URL for the frontend to call the backend
# For development: leave empty (uses Vite proxy)
# For production: https://your-backend.onrender.com
VITE_API_BASE_URL=
